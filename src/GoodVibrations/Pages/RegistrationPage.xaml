<?xml version="1.0" encoding="UTF-8"?>
<xamForms:ReactiveContentPage
    x:TypeArguments="viewModels:RegistrationViewModel"
    xmlns:xamForms="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
	xmlns:styles="clr-namespace:GoodVibrations.Styles;assembly=GoodVibrations"
    xmlns:viewModels="clr-namespace:GoodVibrations.ViewModels;assembly=GoodVibrations" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GoodVibrations.Pages.RegistrationPage">

	<Page.Resources>
        <ResourceDictionary MergedWith="styles:AppStyles" />
    </Page.Resources>

	<StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="250">
        <Entry Text="{Binding Username}" Placeholder="{Binding UsernamePlaceholder}" TextColor="Black" />
        <Entry Text="{Binding Password}" Placeholder="{Binding PasswordPlaceholder}" IsPassword="true" />
        <Button Command="{Binding Register}" Text="{Binding RegisterText}" HorizontalOptions="End" />
    </StackLayout>
</xamForms:ReactiveContentPage>

<?xml version="1.0" encoding="UTF-8"?>
<xamForms:ReactiveContentPage
    x:TypeArguments="viewModels:PhoneCallViewModel"
        xmlns:xamForms="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
        xmlns:viewModels="clr-namespace:GoodVibrations.ViewModels;assembly=GoodVibrations"
        xmlns:styles="clr-namespace:GoodVibrations.Styles;assembly=GoodVibrations"
        xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GoodVibrations.Pages.PhoneCallPage">
    <Page.Resources>
        <ResourceDictionary MergedWith="styles:AppStyles" />
    </Page.Resources>

	<ScrollView>
    	<StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="250">
            <Entry Text="{Binding DestinationNumber}" Placeholder="{Binding PhoneNumberPlaceholder}" />
			<Button Command="{Binding Contact}" Text="{Binding ContactText}" FontSize="14" />
    		<Label Text="{Binding TextLabel}" />
    		<Editor Text="{Binding MessageText}" BackgroundColor="#EEEEEE" HeightRequest="60" />
            <Button Command="{Binding Call}" Text="{Binding CallText}"/>

		</StackLayout>
	</ScrollView>
	
</xamForms:ReactiveContentPage>
